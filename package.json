{
  "name": "eluno",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "El Uno â€” The Law of One in a philosophical lens",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/chuchurex/eluno.git"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.0",
    "@eluno/core": "github:chuchurex/eluno-core",
    "dotenv": "^17.0.0",
    "sass": "^1.97.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "concurrently": "^8.2.2",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "live-server": "^1.2.2",
    "prettier": "^3.8.1"
  },
  "scripts": {
    "build": "node scripts/build-v2.cjs && npm run sass:build",
    "sass:build": "sass src/scss/main.scss:dist/css/main.css --style=compressed",
    "sass:watch": "sass --watch src/scss/main.scss:dist/css/main.css",
    "dev": "concurrently \"npm run sass:watch\" \"live-server dist --port=4025\"",
    "deploy": "eluno-deploy",
    "build:pdf": "eluno-pdf",
    "integrate": "node scripts/integrate-chapter.js",
    "translate": "node scripts/translate-chapter.js",
    "lint": "npx eslint scripts/",
    "lint:fix": "npx eslint scripts/ --fix",
    "format": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "validate": "npm run lint && npm run format:check && npm run test:json",
    "test:json": "node scripts/validate-json.js",
    "test:alignment": "node scripts/validate-alignment.js all",
    "prepare": "husky"
  },
  "lint-staged": {
    "scripts/**/*.js": [
      "npx eslint --fix",
      "npx prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "npx prettier --write"
    ],
    "i18n/**/*.json": [
      "node scripts/validate-json.js"
    ]
  }
}
